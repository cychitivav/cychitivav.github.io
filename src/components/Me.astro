---
import { Image } from "astro:assets"
---

<Image class="me" src="/images/me.webp" alt="Me" width={1000} height={1000} loading="eager" />

<style>
	.me {
		position: absolute;
		bottom: 0;
		right: 0;
		z-index: -1;

		width: auto;
		height: min(auto, 100%);
		max-height: 100%;
		max-width: 100%;

		mask-image: linear-gradient(to top, #0000 0%, #000 45%),
			radial-gradient(ellipse at center, #000 30%, #0000 70%);
	}

	@media (width <= 768px) {
		.me {
			position: static;
			height: auto;
			width: 100vw;
			margin-bottom: 1rem;
		}
	}
</style>
