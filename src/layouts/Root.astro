---
import "@fontsource/roboto"
import { ViewTransitions } from "astro:transitions"

import Header from "@components/Header.astro"
import Particles from "@components/Particles.astro"
import SocialLinks from "@components/SocialLinks.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/icon" href="/favicon.ico" />
		<meta name="theme-color" content="#fff" />

		<meta name="author" content="Cristian Chitiva" />
		<meta name="description" content="Personal website of Cristian Chitiva" />
		<meta
			name="keywords"
			content="developer, web, frontend, backend, robotics, software, engineer, fullstack"
		/>

		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />

		<title>Cristian Chitiva</title>
	</head>

	<body>
		<Header transition:persist />
		<Particles transition:persist />

		<slot />

		<SocialLinks />
	</body>
</html>

<style>
	body {
		display: flex;
		flex-direction: column;
		align-items: center;
		overflow-y: auto;

		background-image: radial-gradient(circle, #00514644 20%, #0000 60%);
		background-color: #000;
		background-size: 200% 200%;
		animation:
			loader 3s forwards,
			moveGradient 30s ease-in-out infinite alternate;
		color: #fff;
	}

	@keyframes moveGradient {
		0% {
			background-position: 0 -80%;
		}

		25% {
			background-position: 80% -100%;
		}

		50% {
			background-position: 80% 0;
		}
	}

	@keyframes loader {
		from {
			opacity: 0;
			mask-image: radial-gradient(circle, #000, #0000);
		}

		to {
			opacity: 1;
			mask-image: radial-gradient(circle, #000, #000);
		}
	}

	@media (prefers-color-scheme: light) {
		body {
			color: #000;
			background-color: #fff;
		}
	}
</style>

<style is:global>
	* {
		min-width: 0;
		font: inherit;
	}

	*,
	*::before,
	*::after {
		color: inherit;
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	img,
	video,
	svg {
		display: block;
		height: auto;
		max-width: 100%;
	}

	:root {
		height: 100dvh;
		width: 100dvw;

		font-family: "Roboto", sans-serif;
		font-size: clamp(16px, 1vw, 18px);
		color-scheme: light dark;
	}

	body {
		min-height: 100vh;
		width: 100dvw;
		overflow-x: hidden;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	a {
		text-decoration: none;
	}

	::-webkit-scrollbar {
		width: 5px;
		height: 5px;
	}

	::-webkit-scrollbar-thumb {
		background-color: #d0d0d0;
		border-radius: 2px;
		cursor: pointer;

		background-clip: padding-box;
		border: 2px solid transparent;

		&:hover {
			border-width: 0;
		}
	}

	::selection {
		background-color: #004e33;
		color: #f5f5f5;
	}

	@media (prefers-color-scheme: dark) {
		html {
			color-scheme: dark;
		}
	}
</style>
