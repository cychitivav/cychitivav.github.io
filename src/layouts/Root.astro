---
import "@fontsource/roboto"
import { ViewTransitions } from "astro:transitions";

import Particles from "@components/Particles.astro"
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/icon" href="/favicon.ico" />
		<meta name="theme-color" content="#000" />

		<meta name="author" content="Cristian Chitiva" />
		<meta name="description" content="Personal website of Cristian Chitiva" />
		<meta
			name="keywords"
			content="developer, web, frontend, backend, robotics, software, engineer, fullstack"
		/>

		<!--  Essential META Tags -->
		<meta property="og:title" content="Cristian Chitiva" />
		<meta property="og:type" content="profile" />
		<meta property="og:image" content="https://cristianchitiva.dev/images/og-image.jpeg" />
		<meta property="og:url" content="https://cristianchitiva.dev" />
		<meta name="twitter:card" content="summary_large_image" />

		<!--  Non-Essential, But Recommended -->
		<meta
			property="og:description"
			content="Personal website of Cristian Chitiva, a passionate robotics engineer and full-stack developer with experience in designing and building autonomous systems."
		/>
		<meta property="og:site_name" content="Cristian Chitiva" />
		<meta name="twitter:image:alt" content="Cristian Chitiva" />

		<!--  Non-Essential, But Required for Analytics -->
		<!-- <meta property="fb:app_id" content="your_app_id" /> -->
		<meta name="twitter:site" content="@CChitiva7" />

		<ViewTransitions />

		<title>Cristian Chitiva</title>
	</head>

	<body>
		<Particles transition:name="particles" />

		<slot />
	</body>
</html>

<style>
	body {
		display: flex;
		flex-direction: column;
		align-items: center;
		overflow-y: auto;
		padding: 0 5vw;

		background-image: radial-gradient(circle, #00514644 20%, #0000 60%);
		background-color: #000;
		background-size: 200% 200%;
		animation:
			loader 3s forwards,
			moveGradient 30s ease-in-out infinite alternate;
		color: #fff;
	}

	@keyframes moveGradient {
		0% {
			background-position: 0 -80%;
		}

		25% {
			background-position: 80% -100%;
		}

		50% {
			background-position: 80% 0;
		}
	}

	@keyframes loader {
		from {
			opacity: 0;
		}

		to {
			opacity: 1;
		}
	}

	@media (prefers-color-scheme: light) {
		body {
			color: #000;
			background-color: #fff;
		}
	}
</style>

<style is:global>
	* {
		min-width: 0;
		font: inherit;
	}

	*,
	*::before,
	*::after {
		color: inherit;
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	img,
	video,
	svg {
		display: block;
		height: auto;
		max-width: 100%;
	}

	:root {
		height: 100svh;
		width: 100vw;
		scroll-behavior: smooth;

		font-family: "Roboto", sans-serif;
		font-size: clamp(16px, 1vw, 18px);
		color-scheme: light dark;
	}

	body {
		min-height: 100svh;
		width: 100vw;
		overflow-x: hidden;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	a {
		text-decoration: none;
	}

	::selection {
		background-color: #004e33;
		color: #f5f5f5;
	}

	@media (prefers-color-scheme: dark) {
		html {
			color-scheme: dark;
		}
	}
</style>
