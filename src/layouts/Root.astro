---
import "@fontsource/roboto"
import { ViewTransitions } from "astro:transitions"

import Header from "../components/Header.astro"
import Background from "../components/Background.astro"

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<link rel="icon" type="image/icon" href="/favicon.ico" />
		<meta name="theme-color" content="#fff" />

		<meta name="author" content="Cristian Chitiva" />
		<meta name="description" content="Personal website of Cristian Chitiva" />
		<meta
			name="keywords"
			content="developer, web, frontend, backend, robotics, software, engineer, fullstack"
		/>

		<meta name="generator" content={Astro.generator} />
		<ViewTransitions />

		<title>{title}</title>
	</head>

	<body>
		<Background />
		<main>
			<Header />
			<slot />
		</main>
	</body>
</html>

<style is:global lang="scss">
	* {
		min-width: 0;
		font: inherit;
	}

	*,
	*::before,
	*::after {
		color: inherit;
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	img,
	video,
	svg {
		display: block;
		height: auto;
		max-width: 100%;
	}

	:root {
		height: 100dvh;
		width: 100dvw;
		overflow: hidden;

		font-family: "Roboto", sans-serif;
		font-size: clamp(16px, 1vw, 18px);
		color-scheme: light dark;
	}

	main {
		flex: 1;
		width: min(100%, 1500px);
		padding: 0 3rem;

		display: flex;
		flex-direction: column;
	}

	body {
		min-height: 100vh;
		width: 100dvw;
		overflow-x: hidden;

		display: flex;
		flex-direction: column;
		align-items: center;

		background: linear-gradient(to bottom right, #000000 0%, #004c4244 80%), #000;
		background-size: 200% 200%;
		animation: moveGradient 5s linear infinite alternate;
		color: #fff;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		text-wrap: balance;
	}

	p {
		text-wrap: pretty;
	}

	a {
		text-decoration: none;
	}

	::-webkit-scrollbar {
		width: 5px;
		height: 5px;
	}

	::-webkit-scrollbar-thumb {
		background-color: #d0d0d0;
		border-radius: 2px;
		cursor: pointer;

		background-clip: padding-box;
		border: 2px solid transparent;

		&:hover {
			border-width: 0;
		}
	}

	::selection {
		background-color: #004e33;
		color: #f5f5f5;
	}

	@media (prefers-color-scheme: dark) {
		html {
			color-scheme: dark;
		}
	}

	@keyframes moveGradient {
		from {
			background-position: 0 0;
		}

		to {
			background-position: 100% 100%;
		}
	}
</style>
